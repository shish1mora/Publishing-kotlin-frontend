<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
<uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PublishingHouseKotlin"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">
        <activity
            android:name=".controllers.LoginActivity"
            android:label="@string/loginLabel"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PublishingHouseKotlin.NoActionBar">
        </activity>
        <activity
            android:name=".controllers.RegisterActivity"
            android:screenOrientation="portrait"
            android:label="@string/registerLabel">
        </activity>
        <activity
            android:name=".controllers.SaveTypeProductActivity"
            android:screenOrientation="portrait"
            android:label="@string/saveTypeProductLabel">
        </activity>
        <activity
            android:name=".controllers.DetailsTypeProductActivity"
            android:screenOrientation="portrait"
            android:label="@string/detailsLabel">
        </activity>
        <activity
            android:name=".controllers.DetailsMaterialActivity"
            android:screenOrientation="portrait"
            android:label="@string/detailsLabel">
        </activity>
        <activity
            android:name=".controllers.SaveMaterialActivity"
            android:screenOrientation="portrait"
            android:label="@string/saveMaterialLabel">
        </activity>
        <activity
            android:name=".controllers.DetailsPrintingHouseActivity"
            android:screenOrientation="portrait"
            android:label="@string/detailsLabel">
        </activity>
        <activity
            android:name=".controllers.SavePrintingHouseActivity"
            android:screenOrientation="portrait"
            android:label="@string/savePrintingHouseLabel">
        </activity>
        <activity
            android:name=".controllers.SaveEmployeeActivity"
            android:screenOrientation="portrait"
            android:label="@string/saveEmployeeLabel">
        </activity>
        <activity
            android:name=".controllers.DetailsEmployeeActivity"
            android:screenOrientation="portrait"
            android:label="@string/detailsLabel">
        </activity>
        <activity
            android:name=".controllers.SaveProductActivity"
            android:screenOrientation="portrait"
            android:label="@string/saveProductLabel">
        </activity>
        <activity
            android:name=".controllers.DetailsProductActivity"
            android:screenOrientation="portrait"
            android:label="@string/detailsLabel">
        </activity>
        <activity
            android:name=".controllers.SaveBookingActivity"
            android:screenOrientation="portrait"
            android:label="@string/saveBookingLabel">
        </activity>
        <activity
            android:name=".controllers.DetailsBookingActivity"
            android:screenOrientation="portrait"
            android:label="@string/detailsLabel">
        </activity>
        <activity
            android:name=".controllers.UpdateBookingAdminActivity"
            android:screenOrientation="portrait"
            android:label="@string/workingWithBooking">
        </activity>
        <activity
            android:name=".controllers.GenerateReportBookingActivity"
            android:screenOrientation="portrait"
            android:label="@string/generateReportTitle">
        </activity>
        <activity
            android:name=".controllers.DetailsCustomerActivity"
            android:screenOrientation="portrait"
            android:label="@string/detailsLabel">
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>